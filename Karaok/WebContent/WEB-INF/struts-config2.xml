<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<!-- struts-config.xml -->
<struts-config>
	
	<action-mappings>
	
		<!-- Note리스트 -->
		<action path="/note_list"
				type="com.karaok.note.actions.NoteListAction">
			<forward name="success" path="/view/news_note/note_list.jsp" />	
		</action>
		
		 <!-- 글쓰기 -->   		
		<action path="/note_create"
	    		forward="/view/news_note/note_create.jsp"/>
		<!-- 글쓰기 완료 -->
		<action path="/note_create_complete"
				type="com.karaok.note.actions.NoteAction">
			<forward name="success" path="/view/news_note/note_list.jsp"/>		
		</action>
		<!-- 글보기 -->
		<action path="/note_show"
				type="com.karaok.note.actions.NoteShowAction">
				<forward name="success" path="/view/news_note/note_show.jsp"/>
		</action>
	</action-mappings>

</struts-config>