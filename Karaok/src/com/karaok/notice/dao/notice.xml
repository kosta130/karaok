<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd" >

<sqlMap namespace="notice">
<typeAlias alias="notice" type="com.karaok.notice.dto.NoticeDTO"/>
 <select id="insert" parameterClass="notice">
	insert into tb_notice
	values(seq_notice_num.nextval, #nickname#, #subject#, #contents#, sysdate)
 </select>
 
  <select id="delete" parameterClass="int">
	delete from tb_notice
	where num=#num#
  </select>
  
  <select id="update" parameterClass="notice">
	update tb_notice
	set subject=#subject# contents=#contents#
  </select>
  
  <select id="select" parameterClass="int" resultClass="notice">
	select nickname, subject, contents
	from tb_notice
	where num=#num#
  </select>
  
  <select id="selectAll" resultClass="notice">
	select num, nickname, subject, ndate
	from tb_notice
	order by num desc
  </select>

</sqlMap>
