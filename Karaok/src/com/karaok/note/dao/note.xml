<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd" >
<sqlMap namespace="note">
	<insert id="insert" parameterClass="com.karaok.note.dto.NoteDTO">
		insert into tb_update values (seq_update_num.nextval,#nickname#,#subject#,#contents#,sysdate)
	</insert>
	<select id="select" parameterClass="int" resultClass="com.karaok.note.dto.NoteDTO">
		select NUM, NICKNAME,CONTENTS
		from TB_UPDATE
		where NUM=#NUM#
	</select>
	<select id="selectAll" resultClass="com.karaok.note.dto.NoteDTO">
		select NUM,NICKNAME,SUBJECT,CONTENTS,NDATE
		from TB_UPDATE
		order by NUM desc
	</select>
</sqlMap>
