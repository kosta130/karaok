<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd" >
<sqlMap namespace="reply">
	<typeAlias alias="reply" type="com.Karaok.qna.reply.dto.Reply"/>
	
	<insert id="add" parameterClass="reply">
		insert into reply
		values (reply_seq.naextval, #nickname#, #contents#)
	</insert>
	
	<delete id="delete" parameterClass="int">
		delete from reply
		where no=#no#
	</delete>
	
	<update id="update" parameterClass="reply">
		update reply
		set nickname=#nickname#, contents=#contents#
		where no=#no#
	</update>
	
	<select id="find" parameterClass="int" resultClass="reply">
		select nickname, contents
		from reply
		where no=#no#
	</select>
	
	<select id="findAll" resultClass="reply">
		select no,nickname,contents
		from reply
		order by no
	</select>



</sqlMap>
